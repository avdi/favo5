<p id="notice"><%= notice %></p>

<h1>Votes</h1>

<table>
  <thead>
    <tr>
      <th>Candidate</th>
      <th>Comment</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @votes.each do |vote| %>
      <tr>
        <td><%= vote.candidate_id %></td>
        <td><%= vote.comment %></td>
        <td><%= link_to 'Show', [vote.canvass, vote] %></td>
        <td><%= link_to 'Edit', edit_canvass_vote_path(vote.canvass, vote) %></td>
        <td><%= link_to 'Destroy', [vote.canvass, vote], method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Vote', new_canvass_vote_path %>
