<p id="notice"><%= notice %></p>

<h1>Canvasses</h1>

<table>
  <thead>
    <tr>
      <th>Question</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @canvasses.each do |canvass| %>
      <tr>
        <td><%= canvass.question %></td>
        <td><%= link_to 'Show', canvass %></td>
        <td><%= link_to 'Edit', edit_canvass_path(canvass) %></td>
        <td><%= link_to 'Destroy', canvass, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Canvass', new_canvass_path %>
